<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/net.karappo.android.osc"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#222222">
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="horizontal" android:background="#000000" android:layout_marginLeft="5px" android:layout_marginRight="5px" android:layout_marginTop="5px" android:padding="10px">
        <EditText android:id="@+id/host_ip" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="10.0.1.3" android:layout_weight="1" android:hint="IP Address" android:singleLine="true"></EditText>
        <EditText android:id="@+id/host_port" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="7400" android:layout_weight="1" android:hint="Port" android:singleLine="true"></EditText>
        <Button android:id="@+id/connect_btn" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Connect" android:layout_weight="0"></Button>
        <Button android:id="@+id/send_btn" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="0" android:text="test"></Button>
    </LinearLayout>
    <net.karappo.android.osc.view.SpringUnit android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/unit1" android:layout_marginLeft="5px" android:layout_marginTop="5px" android:layout_marginRight="5px" android:layout_marginBottom="0px"></net.karappo.android.osc.view.SpringUnit>
    <net.karappo.android.osc.view.SpringUnit android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/unit2" android:layout_marginLeft="5px" android:layout_marginRight="5px" android:layout_marginTop="5px"/>
    <net.karappo.android.osc.view.SpringUnit android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/unit3" android:layout_marginLeft="5px" android:layout_marginRight="5px" android:layout_marginTop="5px"/>
    <net.karappo.android.osc.view.SpringUnit android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/unit4" android:layout_marginRight="5px" android:layout_marginLeft="5px" android:layout_marginTop="5px"/>
</LinearLayout>
