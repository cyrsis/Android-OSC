<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/net.karappo.android.osc"
    android:orientation="vertical"
    android:padding="5px" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content">
    
    <TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:text="IP ADRESS : PORT" android:layout_margin="10px" android:layout_width="330px" android:gravity="center"></TextView>
    
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_margin="10px" android:layout_width="wrap_content">
        <net.karappo.android.numpicker.NumberPicker android:layout_height="wrap_content" android:id="@+id/host_ip_1" android:layout_width="50px"/>
        <TextView android:text="." android:layout_width="wrap_content" android:id="@+id/TextView02" android:textSize="20dip" android:layout_height="match_parent" android:gravity="center_vertical"/>
        <net.karappo.android.numpicker.NumberPicker android:layout_height="wrap_content" android:id="@+id/host_ip_2" android:layout_width="50px"/>
        <TextView android:text="." android:layout_width="wrap_content" android:id="@+id/TextView02" android:textSize="20dip" android:layout_height="match_parent" android:gravity="center_vertical"/>
        <net.karappo.android.numpicker.NumberPicker android:layout_height="wrap_content" android:id="@+id/host_ip_3" android:layout_width="50px"/>
        <TextView android:text="." android:layout_width="wrap_content" android:id="@+id/TextView02" android:textSize="20dip" android:layout_height="match_parent" android:gravity="center_vertical"/>
        <net.karappo.android.numpicker.NumberPicker android:layout_height="wrap_content" android:id="@+id/host_ip_4" android:layout_width="50px"/>
        <TextView android:text=":" android:layout_width="wrap_content" android:id="@+id/TextView02" android:textSize="20dip" android:layout_height="match_parent" android:gravity="center_vertical"/>
        <net.karappo.android.numpicker.NumberPicker android:layout_height="wrap_content" android:id="@+id/host_port" app:min="0" app:max="65535" android:layout_width="100px"/>
	</LinearLayout>
	    
    <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_margin="10px" android:layout_width="match_parent">
        <Button android:text="Cancel" android:id="@+id/cancel_btn" android:layout_height="wrap_content" style="@style/MyButton" android:layout_width="match_parent" android:layout_weight="1" android:layout_marginRight="5px"></Button>
        <Button android:text="OK" android:id="@+id/connect_btn" android:layout_height="wrap_content" style="@style/MyButton" android:layout_width="match_parent" android:layout_weight="1" android:layout_marginLeft="5px"></Button>
    </LinearLayout>

</LinearLayout>
