<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:app="http://schemas.android.com/apk/res/net.karappo.android.osc"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="#000000" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_marginBottom="5px" android:layout_marginLeft="5px" android:layout_marginRight="5px">
    <LinearLayout android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="horizontal" android:gravity="center_vertical">
        <TextView android:text="1" android:textColor="#0054BF" android:id="@+id/idTV" android:layout_height="match_parent" android:textSize="40dip" android:layout_marginLeft="10px" android:gravity="right|center_vertical" android:layout_width="25dip" />
        <ToggleButton android:checked="true" android:layout_width="30px" android:background="@drawable/togglebtn" android:id="@+id/enableBtn" android:layout_height="match_parent" android:textOff=""  android:textOn="" />
        <Button android:layout_height="wrap_content" style="@style/CircleButton" android:layout_width="match_parent" android:id="@+id/settingBtn" />
        <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1">
            <FrameLayout android:padding="10px" android:id="@+id/frameLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
                <net.karappo.android.osc.view.AnimLayout android:id="@+id/anim_layout" android:background="@drawable/animlayout_bg" android:layout_height="60px" android:layout_width="match_parent" />
                <ImageView android:id="@+id/imageView1" android:src="@drawable/memori" android:layout_gravity="center" android:layout_height="match_parent" android:layout_width="1px" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10px" android:visibility="gone" android:id="@+id/settingPanel">
        <TableRow android:layout_marginBottom="10px" android:id="@+id/TableRow01" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="SPRING" android:textColor="#444444" android:layout_height="wrap_content" android:id="@+id/springTV" android:layout_width="wrap_content" />
            <Button android:layout_height="wrap_content" android:id="@+id/springBtn1" style="@style/CircleButton" android:layout_width="wrap_content" />
            <SeekBar android:layout_marginRight="10px" android:layout_height="wrap_content" android:id="@+id/springSeek" android:layout_weight="1" android:progressDrawable="@drawable/seekbar" android:layout_marginLeft="10px" android:layout_width="300px" />
            <Button android:layout_height="wrap_content" android:id="@+id/springBtn2" style="@style/CircleButton" android:layout_width="wrap_content" />
        </TableRow>
        <TableRow android:id="@+id/tableRow1" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="FRICTION" android:textColor="#444444" android:layout_height="wrap_content" android:id="@+id/frictionTV" android:layout_marginRight="30px" android:layout_width="wrap_content" />
            <Button android:layout_height="wrap_content" android:id="@+id/frictionBtn1" style="@style/CircleButton" android:layout_width="wrap_content" />
            <SeekBar android:layout_marginRight="10px" android:layout_height="wrap_content" android:id="@+id/frictionSeek" android:layout_weight="1" android:fadingEdge="horizontal|vertical" android:progressDrawable="@drawable/seekbar" android:layout_marginLeft="10px" android:layout_width="300px" />
            <Button android:layout_height="wrap_content" android:id="@+id/frictionBtn2" style="@style/CircleButton" android:layout_width="wrap_content" />
        </TableRow>
    </TableLayout>
</LinearLayout>

