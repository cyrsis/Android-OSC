<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:app="http://schemas.android.com/apk/res/net.karappo.android.osc"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="#000000" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_marginBottom="5px" android:layout_marginLeft="5px" android:layout_marginRight="5px">
    <LinearLayout android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="horizontal" android:gravity="center_vertical">
        <TextView android:layout_height="match_parent" android:gravity="right|center_vertical" android:textColor="@color/unitcolor_bounce" android:text="0" android:id="@+id/idTV" android:layout_width="50px" android:textSize="40px"/>
        <ToggleButton android:checked="true" android:layout_width="30px" android:id="@+id/enableBtn" android:layout_height="match_parent" android:textOff=""  android:textOn="" android:background="@drawable/togglebtn_red"/>
        <Button android:layout_height="wrap_content" style="@style/OvalButton" android:layout_width="match_parent" android:id="@+id/settingBtn" />
        <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1">
            <FrameLayout android:padding="10px" android:id="@+id/frameLayout1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
                <net.karappo.android.osc.view.unit.bounce.AnimLayout android:id="@+id/anim_layout" android:background="@drawable/animlayout_bg" android:layout_height="60px" android:layout_width="match_parent" app:ballFillColor="@color/unitcolor_bounce" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/settingPanel" android:layout_width="match_parent" android:background="#101010">
        <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout6" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:padding="5px" android:layout_margin="1px">
            <TextView android:textSize="10px" android:layout_height="wrap_content" android:id="@+id/springTV" android:layout_weight="1" android:text="gravity" android:layout_width="wrap_content" android:textColor="#666666" android:layout_marginBottom="10px"></TextView>
            <LinearLayout android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/linearLayout3" android:layout_width="match_parent">
                <Button android:layout_height="wrap_content" android:id="@+id/gravityBtnMin" style="@style/MiniButton" android:layout_width="wrap_content"></Button>
                <SeekBar android:layout_marginLeft="5px" android:layout_weight="1" android:layout_width="300px" android:id="@+id/gravitySeek" android:layout_marginRight="5px" style="@style/MySeekBar"></SeekBar>
                <Button android:layout_height="wrap_content" android:id="@+id/gravityBtnMax" style="@style/MiniButton" android:layout_width="wrap_content"></Button>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:layout_height="match_parent" android:id="@+id/ImageView01" android:src="@drawable/section_line" android:layout_width="1px" android:layout_gravity="center"></ImageView>
        <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout7" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:padding="5px" android:layout_margin="1px">
            <TextView android:textSize="10px" android:layout_height="wrap_content" android:id="@+id/TextView01" android:layout_weight="1" android:text="reflection" android:layout_width="wrap_content" android:textColor="#666666" android:layout_marginBottom="10px"></TextView>
            <LinearLayout android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/linearLayout4" android:layout_width="match_parent">
                <Button android:layout_height="wrap_content" android:id="@+id/reflectionBtnMin" style="@style/MiniButton" android:layout_width="wrap_content"></Button>
                <SeekBar android:fadingEdge="horizontal|vertical" android:layout_marginLeft="5px" android:layout_weight="1" android:layout_width="300px" android:id="@+id/reflectionSeek" android:layout_marginRight="5px" style="@style/MySeekBar"></SeekBar>
                <Button android:layout_height="wrap_content" android:id="@+id/reflectionBtnMax" style="@style/MiniButton" android:layout_width="wrap_content"></Button>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:layout_height="match_parent" android:id="@+id/ImageView02" android:src="@drawable/section_line" android:layout_width="1px" android:layout_gravity="center"></ImageView>
        <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout8" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:padding="5px" android:layout_margin="1px">
            <TextView android:textSize="10px" android:layout_height="wrap_content" android:id="@+id/frictionTV" android:layout_weight="1" android:text="friction" android:layout_width="wrap_content" android:textColor="#666666" android:layout_marginBottom="10px"></TextView>
            <LinearLayout android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/linearLayout5" android:layout_width="match_parent">
                <Button android:layout_height="wrap_content" android:id="@+id/frictionBtnMin" style="@style/MiniButton" android:layout_width="wrap_content"></Button>
                <SeekBar android:fadingEdge="horizontal|vertical" android:layout_marginLeft="5px" android:layout_weight="1" android:layout_width="300px" android:id="@+id/frictionSeek" android:layout_marginRight="5px" style="@style/MySeekBar"></SeekBar>
                <Button android:layout_height="wrap_content" android:id="@+id/frictionBtnMax" style="@style/MiniButton" android:layout_width="wrap_content"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

